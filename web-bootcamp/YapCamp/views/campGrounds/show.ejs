<% layout('/layouts/boilerPlate') %> 
<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= campGroundDetail.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= campGroundDetail.title%></h5>
                <p class="card-text"><%= campGroundDetail.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campGroundDetail.location%></li>
                <li class="list-group-item"><%= campGroundDetail.price%>원 ~ / 박</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/campGrounds/<%=campGroundDetail._id%>/edit">수정</a>
                <form class="d-inline" action="/campGrounds/<%=campGroundDetail._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">삭제</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                이틀 전
            </div>
        </div>
    </div>
</div>